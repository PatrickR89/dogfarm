<% layout ('layout/boilerplate') %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit About Us</h3>
    <form
      action="/aboutUs/<%= aboutUs._id %>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
      novalidate
      class="needs-validation"
    >
      <label for="field1Title" class="form-label">Enter first title:</label>
      <input
        type="text"
        name="aboutUs[field1Title]"
        id="field1Title"
        class="form-control editorial-div mb-3"
        maxlength="50"
        value="<%= aboutUs.field1Title %>"
        required
      />

      <label for="field1" class="form-label">Enter your content:</label>
      <textarea
        name="aboutUs[field1]"
        id="field1"
        cols="30"
        rows="10"
        class="form-control mb-3 editorial-div"
        required
      >
<%= aboutUs.field1 %></textarea
      >

      <label for="field2Title" class="form-label">Enter second title:</label>
      <input
        type="text"
        name="aboutUs[field2Title]"
        id="field2Title"
        class="form-control editorial-div mb-3"
        maxlength="50"
        value="<%= aboutUs.field2Title %>"
        required
      />

      <label for="field2" class="form-label">Enter your content:</label>
      <textarea
        name="aboutUs[field2]"
        id="field2"
        cols="30"
        rows="10"
        class="form-control mb-3 editorial-div"
        required
      >
<%= aboutUs.field2 %></textarea
      >

      <label for="field3Title" class="form-label">Enter third title:</label>
      <input
        type="text"
        name="aboutUs[field3Title]"
        id="field3Title"
        class="form-control editorial-div mb-3"
        maxlength="50"
        value="<%= aboutUs.field3Title %>"
        required
      />

      <label for="field3" class="form-label">Enter your content:</label>
      <textarea
        name="aboutUs[field3]"
        id="field3"
        cols="30"
        rows="10"
        class="form-control mb-3 editorial-div"
        required
      >
<%= aboutUs.field3 %></textarea
      >

      <label for="images" class="form-label"> Images: </label>
      <input
        class="form-control editorial-div mb-3"
        type="file"
        name="images"
        id="images"
      />

      <div class="mb-3">
        <h5>Choose images to delete:</h5>
        <% aboutUs.images.forEach(function(img, i) { %>
        <div class="mb-3 img-delete">
          <input
            type="checkbox"
            id="image<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
            style="display: none"
          />

          <label for="image<%=i%>" class="del-label"
            ><img
              src="<%= img.url %>"
              style="height: 200px; width: auto"
              alt=""
          /></label>
        </div>
        <% }) %>
      </div>

      <div class="row" style="justify-content: center">
        <button
          class="btn admin-btn mb-3 btn-sm"
          type="submit"
          style="width: 33%; align-items: center"
        >
          Submit
        </button>
      </div>
      <div class="row" style="justify-content: center">
        <a
          href="/aboutUs"
          class="btn admin-btn btn-sm"
          style="width: 20%; align-items: center"
          >Back</a
        >
      </div>
    </form>
  </div>
</div>
