<% layout ('layout/boilerplate') %>

<div class="row text-center">
  <div class="col-8 offset-2">
    <h3>Edit contact:</h3>
    <div class="row text-start">
        <div class="col-6">
    <form
      action="/contact/<%= contact._id %>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <label for="street" class="form-label">Street name:</label>
      <input
        type="text"
        name="contact[street]"
        id="street"
        class="form-control editorial-div mb-3"
        maxlength="50"
        value="<%= contact.street %>"
        required
      />
      <label for="streetNo" class="form-label">Street number:</label>
      <input
        type="number"
        name="contact[streetNo]"
        id="street"
        class="form-control editorial-div mb-3"
        maxlength="50"
        value="<%= contact.streetNo %>"
        required
      />
      <label for="city" class="form-label">City:</label>
      <input
        type="text"
        name="contact[city]"
        id="city"
        class="form-control editorial-div mb-3"
        maxlength="50"
        value="<%= contact.city %>"
        required
      />
      <label for="country" class="form-label">Country:</label>
      <input
        type="text"
        name="contact[country]"
        id="country"
        class="form-control editorial-div mb-3"
        maxlength="50"
        value="<%= contact.country %>"
        required
      />
    </div>
    <div class="col-6">
        <label for="phone" class="form-label">Phone number(with country call number):</label>
      <input
        type="number"
        name="contact[phone]"
        id="country"
        class="form-control editorial-div mb-3"
        maxlength="50"
        value="<%= contact.phone %>"
        required
      />
        <label for="email" class="form-label">Email:</label>
      <input
        type="string"
        name="contact[email]" 
        id="email"
        class="form-control editorial-div mb-3"
        maxlength="50"
        value="<%= contact.email %>"
        required
      />
        <label for="faceLink" class="form-label">Facebook page:</label>
      <input
        type="text"
        name="contact[faceLink]"
        id="faceLink"
        class="form-control editorial-div mb-3"
        value="<%= contact.faceLink %>"
        required
      />
        <label for="instaLink" class="form-label">Instagram profile:</label>
      <input
        type="text"
        name="contact[instaLink]"
        id="instaLink"
        class="form-control editorial-div mb-3"
        value="<%= contact.instaLink %>"
        required
      />
        <label for="twittLink" class="form-label">Twitter profile:</label>
      <input
        type="text"
        name="contact[twittLink]"
        id="twittLink"
        class="form-control mb-3 editorial-div"
        value="<%= contact.twittLink %>"
        required
      />
    </div>
    </div>

      <div class="row" style="justify-content: center">
        <button
          class="btn admin-btn mb-3 btn-sm"
          type="submit"
          style="width: 33%; align-items: center"
        >
          Submit
        </button>
      </div>
      <div class="row" style="justify-content: center">
        <a
          href="/contact"
          class="btn admin-btn btn-sm"
          style="width: 20%; align-items: center"
          >Back</a
        >
      </div>
    </form>

  </div>
</div>
