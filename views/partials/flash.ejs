<% if (success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show"
  role="alert"
  style="position: fixed; top: 10vh; left: 35%; width: 25%"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show"
  role="alert"
  style="position: fixed; top: 10vh; left: 35%; width: 25%"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
