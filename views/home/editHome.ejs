<% layout ('layout/boilerplate') %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit home</h3>
    <form
      action="/home/<%= home._id%>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
      novalidate
      class="needs-validation"
    >
      <label for="aboutUs" class="form-label">About us:</label>
      <textarea
        name="home[aboutUs]"
        id="aboutUs"
        cols="30"
        rows="10"
        class="form-control mb-3 editorial-div"
        required
      >
<%= home.aboutUs %></textarea
      >

      <label for="images" class="form-label"> Images: </label>
      <input
        class="form-control mb-3 editorial-div"
        type="file"
        name="images"
        id="images"
        multiple
      />

      <div class="mb-3">
        <h5>Choose images to delete:</h5>
        <% home.images.forEach(function(img, i) { %>
        <div class="mb-3 img-delete">
          <input
            type="checkbox"
            id="image<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
            style="display: none"
          />

          <label for="image<%=i%>" class="del-label"
            ><img src="<%= img.thumbnail %>" alt=""
          /></label>
        </div>
        <% }) %>
      </div>

      <div class="row" style="justify-content: center">
        <button
          class="btn admin-btn mb-3 btn-sm"
          type="submit"
          style="width: 33%; align-items: center"
        >
          Submit
        </button>
        <div class="row" style="justify-content: center;">
          <a href="/home" class="btn admin-btn btn-sm mb-3"
              style="width: 20%; justify-content: center; margin: auto">Back</a>
    </div>
      </div>
      </div>
    </form>
    
  </div>
</div>
